{
    "name": "commit-warrior",
    "version": "1.0.2",
    "description": "Track your daily GitHub contributions",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder",
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "license": "ISC",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/developer-az/commit-warrior.git"
    },
    "publishConfig": {
      "registry": "https://npm.pkg.github.com"
    },
    "dependencies": {
      "axios": "^1.6.2",
      "electron-store": "^8.1.0",
      "electron-updater": "^6.1.7"
    },
    "devDependencies": {
      "electron": "^28.1.0",
      "electron-packager": "^17.1.2",
      "electron-builder": "^24.9.1"
    },
    "build": {
      "appId": "com.commitwarrior.app",
      "productName": "Commit Warrior",
      "directories": {
        "output": "dist"
      },
      "win": {
        "target": "nsis",
        "icon": "assets/icon.ico",
        "signingHashAlgorithms": ["sha256"],
        "signAndEditExecutable": true,
        "certificateFile": "certificates/certificate.pfx",
        "certificatePassword": "",
        "timeStampServer": "http://timestamp.digicert.com",
        "publisherName": "Commit Warrior"
      },
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
      },
      "publish": {
        "provider": "github",
        "owner": "Az040",
        "repo": "commit-warrior"
      }
    }
  }