{
    "name": "commit-warrior",
    "version": "1.0.7",
    "description": "Track your daily GitHub contributions",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder",
      "test": "node tests/stability-tests.js",
      "test:watch": "nodemon tests/stability-tests.js",
      "dev": "NODE_ENV=development electron .",
      "lint": "echo 'No linting configured yet'",
      "clean": "rm -rf dist/ node_modules/.cache"
    },
    "author": "",
    "license": "ISC",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/developer-az/commit-warrior.git"
    },
    "publishConfig": {
      "registry": "https://npm.pkg.github.com"
    },
    "dependencies": {
      "axios": "^1.6.2",
      "electron-store": "^8.1.0",
      "electron-updater": "^6.1.7"
    },
    "devDependencies": {
      "electron": "^28.1.0",
      "electron-packager": "^17.1.2",
      "electron-builder": "^24.9.1"
    },
    "build": {
      "appId": "com.commitwarrior.app",
      "productName": "Commit Warrior",
      "directories": {
        "output": "dist"
      },
      "win": {
        "target": "nsis",
        "icon": "assets/icon.ico"
      },
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
      },
      "publish": {
        "provider": "github",
        "releaseType": "release",
        "owner": "developer-az",
        "repo": "commit-warrior"
      }
    }
  }